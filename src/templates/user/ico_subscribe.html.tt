[% PROCESS components/forms.html.tt %]
[% PROCESS components/forms_common_rows.html.tt %]

<h1>[% l('[_1] Initial Coin Offering (ICO)', website_name) %]</h1>

<div id="ico_subscribe" class="invisible">
    <p>[% l("[_1] is offering up to <strong>10,000,000</strong> tokens in an open auction. You may place your bids using the form below.", website_name) %]</p>
    <p id="minimum_bid"></p>
    <div class="gr-row">
        <div class="gr-7 gr-12-p gr-12-m">
            <a href="#auction" class="no-ajax">
                <img class="responsive ico-auction" />
            </a>
        </div>
        <div class="gr-5 gr-12-p gr-12-m border-gray border-radius">
            <form id="frm_ico_bid">
                <div class="gr-row fill-bg-color gr-padding-10 border-radius">
                    <h3 class="gr-5 no-margin">[% l('Bid on the ICO:') %]</h3>
                    <div class="gr-7 hint align-end">
                        <span class="currency"></span> [% l('Balance:') %]
                        <strong class="topMenuBalance"></strong>
                    </div>
                </div>
                <div class="gr-row center-text-m">
                    <div class="gr-12 gr-padding-10">
                        <label for="duration">[% l('Number of tokens') %]</label>
                    </div>
                    <div class="gr-12">
                        <div class="gr-12">
                            <div class="gr-row">
                                <input class="gr-9" type="text" id="duration" maxlength="30" autocomplete="off">
                                <div class="fill-bg-color gr-3"><div class="center-text margin-top">[% l("Tokens") %]</div></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="gr-row center-text-m ">
                    <div class="gr-12 gr-padding-10">
                        <label for="price">[% l('Price/token:') %]</label>
                    </div>
                    <div class="gr-12">
                        <div class="gr-12">
                            <div class="gr-row">
                                <input class="gr-9" type="text" id="price" maxlength="30" autocomplete="off">
                                <div class="fill-bg-color gr-3"><div class="center-text margin-top currency">-</div></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="gr-12 align-end hint">[% l("Total:") %] <span id="total"></span></div>
                <div class="center-text">
                    <div id="form_error" class="error-msg invisible"></div>
                    <div class="gr-padding-10">
                        <button id="btn_submit" type="submit">[% l('Place bid') %]</button>
                        <div class="gr-row invisible hint" id="topup_wrapper">
                            <div class="gr-8 align-start error-msg">[% l('You have insufficient funds in your account.') %]</div>
                            <div class="gr-4 align-end"><a href="[% request.url_for('/cashier/forwardws') %]#deposit">[% l('top up in cashier') %]</a></div>
                        </div>
                    </div>
                </div>
            </form>
            [% INCLUDE global/separator_line.html.tt show_mobile=1 class='gr-padding-10' invisible=1 %]
            <div class="timer invisible center-text gr-gutter-left gr-no-gutter-right">
                <h3 class="gr-gutter-right">[% l('Token Sale Begins In') %]</h3>
                <div class="time gr-row">
                    <div class="gr-2">
                        <h1 class="days">00</h1>
                    </div>
                    <div class="gr-1">
                        <h1 class="primary-color">:</h1>
                    </div>
                    <div class="gr-2">
                        <h1 class="hours">00</h1>
                    </div>
                    <div class="gr-1">
                        <h1 class="primary-color">:</h1>
                    </div>
                    <div class="gr-2">
                        <h1 class="minutes">00</h1>
                    </div>
                    <div class="gr-1">
                        <h1 class="primary-color">:</h1>
                    </div>
                    <div class="gr-2">
                        <h1 class="seconds">00</h1>
                    </div>
                </div>
                <div class="text gr-row">
                    <div class="gr-2">
                        <span>[% l('Days') %]</span>
                    </div>
                    <div class="gr-1">
                    </div>
                    <div class="gr-2">
                        <span>[% l('Hours') %]</span>
                    </div>
                    <div class="gr-1">
                    </div>
                    <div class="gr-2">
                        <span>[% l('Minutes') %]</span>
                    </div>
                    <div class="gr-1">
                    </div>
                    <div class="gr-2">
                        <span>[% l('Seconds') %]</span>
                    </div>
                </div>

            </div>
        </div>
    </div>
    [% INCLUDE global/separator_line.html.tt show_mobile=1 class='gr-padding-20' invisible=1 %]
    <div id="ico_bids">
        <h1>
            <span>[% l('[_1] ICO Auction Bids', website_name) %]</span>
            <div class="invisible" id="view_ico_info">
                <a class="button" href="[% request.url_for('user/ico-info') %]">
                    <span>
                        <img src="[% request.url_for('images/ico/icons/bar_chart.svg') %]">
                        [% l('Histogram of Active Bids') %]
                    </span>
                </a>
            </div>
        </h1>
        [% PROCESS components/elements.html.tt %]

        <div id="portfolio">
            <p class="notice-msg center-text invisible" id="error-msg"></p>

            <div id="portfolio-loading"></div>

            <div id="portfolio-content" class="invisible">
                <div id="portfolio-no-contract">
                    <p>[% l("You have no open bids.") %]</p>
                </div>

                [% INCLUDE table scroll=1 id='portfolio-table' tbody_id='portfolio-body' data={
                    thead=[
                        [
                            { class='ref',           text=l('Ref.') },
                            { class='payout nowrap', text=l('No. of Tokens') },
                            { class='bid',           text=l('Bid Price Per Token') },
                            { class='purchase',      text=l('Total Bid Price') },
                            { class='details',       text=l('Status') },
                            { class='button',        text='' },
                        ],
                    ],
                } %]
            </div>
        </div>
    </div>
    <div class="faded">
        <p>[% l('Notes:') %]</p>
        <ol>
            <li>[% l('Each bid cancellation will be subject to a 2% cancellation fee.') %]</li>
            <li>[% l('Unsuccessful bidders will receive a full refund.') %]</li>
        </ol>
    </div>
    <a href="#_" class="no-ajax img-lightbox popup" id="auction">
        <div>
            <img class="responsive ico-auction" />
        </div>
    </a>
</div>

<div class="invisible" id="ico_professional_message">
    <p>[% l("Please confirm that you are a [_1]professional trader[_2] to proceed.", "<a href='" _ request.url_for('user/settings/professional')  _"'>", "</a>") %]</p>
</div>
<div class="invisible" id="ico_virtual_message">
    <p>[% l("Unable to create ICO account while virtual account is selected. Please select your real money account and try again.") %]</p>
</div>

<div class="invisible" id="ico_account_message">
    <p>[% l("Please select your CR account to proceed.") %]</p>
</div>

<div class="invisible" id="ico_new_account_message">
    <p id="message_common" class="invisible">[% l("This feature is only available to CR clients. Please sign up to proceed.") %]</p>
    <p id="message_gaming" class="invisible">[% l("To participate in the Binary.com initial coin offering you are required to open a separate account. By proceeding you acknowledge that you are leaving the account held with Binary (Europe) Ltd, regulated by the Malta Gaming Authority.") %]</p>
    <p id="message_financial" class="invisible">[% l("To participate in the Binary.com initial coin offering you are required to open a separate account. By proceeding you acknowledge that you are leaving the account held with Binary Investments (Europe) Ltd, regulated by the Malta Financial Services Authority.") %]</p>
    <p id="message_iom" class="invisible">[% l("To participate in the Binary.com initial coin offering you are required to open a separate account. By proceeding you acknowledge that you are leaving the account held with Binary (IOM) Ltd, regulated by the Isle of Man Gambling Supervision Commission.") %]</p>
    [% INCLUDE account_opening_reason row_id='row_account_opening_reason' row_class='gr-padding-20 invisible' %]
    <div class="center-text">
        <a href="javascript:;" class="button" id="ico_new_account"><span>[% l("Sign up") %]</span></a>
        <p class="error-msg invisible" id="new_account_error"></p>
    </div>
</div>

<div class="invisible" id="feature_not_allowed">
    <p class="center-text notice-msg">[% l("This feature is not available in your jurisdiction.") %]</p>
</div>

<div id="cancel_bid_confirmation" class="lightbox invisible">
    <div class="gr-padding-30 gr-gutter">
        <div class="gr-gutter">
            <div class="gr-gutter">
                <h1>[% l("Cancel bid?") %]</h1>
                <p class="gr-padding-10 gr-child no-margin">[% l("You will be subject to a 2% cancellation fee.") %]</p>
                <form id="frm_confirm">
                    <div class="gr-row ">
                        <div class="gr-12-m gr-padding-20 gr-centered">
                            <input id="chk_confirm" type="checkbox">
                            <label for="chk_confirm">[% l("I agree to the cancellation fee stated above") %]</label>
                        <div class="error-msg invisible"></div></div>
                    </div>
                    <div class="center-text gr-centered">
                        <button class="button" type="submit">[% l("Yes, cancel my bid") %]</button>
                        <a class="button-secondary" id="cancel" href="javascript:;"><span>[% l("No, return to the ICO auction page") %]</span></a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>